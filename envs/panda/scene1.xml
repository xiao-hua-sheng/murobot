<mujoco model="panda_grasping_training">
  <!-- 包含panda模型 -->
  <include file="panda.xml"/>

  <statistic center="0.5 0 0.4" extent="1.5"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    
    <!-- 添加物体材质 -->
    <material name="object" rgba="0.8 0.2 0.2 1"/>
    <material name="target" rgba="0.2 0.8 0.2 0.3"/>
    <material name="obstacle" rgba="0.4 0.4 0.4 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- 调整机械臂位置 -->
    <body name="panda_base" pos="0.5 0 0">
      <!-- 使用frame引用包含的panda模型 -->
      <frame child="panda/link0"/>
    </body>
    
    <!-- 可抓取物体 -->
    <body name="graspable_object" pos="0.5 0.5 0.05">
      <freejoint/>
      <inertial mass="0.008" pos="0 0 0" diaginertia="0.0001 0.0001 0.0001"/>
      <geom type="box" size="0.025 0.025 0.025" material="object" name="object_geom" friction="3.0 0.005 0.0001"/>
      <site name="object_site" type="sphere" size="0.01" rgba="1 1 0 0.5"/>
    </body>
    
    <!-- 目标放置区域 -->
    <body name="target_zone" pos="0 0.65 0.025">
      <geom type="cylinder" size="0.05 0.01" material="target" name="target_geom"/>
      <site name="target_site" type="cylinder" size="0.05 0.005" rgba="0 1 0 0.5"/>
    </body>
  </worldbody>

</mujoco>